# Slack OAuth Credentials (for "Sign in with Slack")
# Get these from https://api.slack.com/apps > Your App > Basic Information
SLACK_CLIENT_ID=your-client-id
SLACK_CLIENT_SECRET=your-client-secret

# Slack Workspace ID (to restrict access to specific workspace)
# Find this in Slack > Settings > Workspace Settings > Copy Workspace ID
# Or from URL: https://app.slack.com/client/TXXXXXXXX/...
SLACK_TEAM_ID=your-team-id

# Slack User Token (for Lists API access)
# This token needs lists:read scope to fetch list data
# Get from https://api.slack.com/apps > Your App > OAuth & Permissions
SLACK_USER_TOKEN=xoxp-your-user-token

# Flask Session Secret Key (generate a random string for production)
# Leave empty to auto-generate (not recommended for production)
# generate new key with 
#   python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=

# Slack List Field Mapping (customize to match your list columns)
# These should match the column headers in your Slack List
LIST_NAME_COLUMN=Name
LIST_START_DATE_COLUMN=Start Date
LIST_END_DATE_COLUMN=End Date
LIST_NOTES_COLUMN=notes
LIST_CATEGORY_COLUMN=category

# Chart Configuration
CHART_WIDTH=14
CHART_HEIGHT=8
CHART_DPI=150

# Default color for tasks without a category
DEFAULT_TASK_COLOR=#3498db

# Category colors (comma-separated category:color pairs)
# Example: CATEGORY_COLORS=development:#3498db,design:#9b59b6,testing:#27ae60
CATEGORY_COLORS=

# Server Configuration
PORT=3000
DEBUG=true

# Base URL (required for OAuth callback in production)
# Leave empty for local development (defaults to http://localhost:PORT)
# Example: BASE_URL=https://your-app.koyeb.app
BASE_URL=
