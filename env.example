# Slack App Credentials
# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_USER_TOKEN=xoxp-your-user-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token

# Target Slack Resources
SLACK_LIST_ID=your-list-id
SLACK_CANVAS_ID=your-canvas-id
SLACK_CHANNEL_ID=your-channel-id

# Slack List Field Mapping (customize to match your list columns)
# Run debug_list.py or test_user_token.py to see your column names
LIST_NAME_FIELD=name
LIST_START_DATE_FIELD=date
LIST_END_DATE_FIELD=Col0A6C5QUCKH

# Chart Configuration
CHART_WIDTH=14
CHART_HEIGHT=8
CHART_DPI=150
CHART_TITLE=Project Timeline
CHART_GROUP_BY=

# Default color for tasks without a category
DEFAULT_TASK_COLOR=#3498db

# Category colors (comma-separated category:color pairs)
# Example: CATEGORY_COLORS=development:#3498db,design:#9b59b6,testing:#27ae60
CATEGORY_COLORS=

# Server Configuration
PORT=3000
DEBUG=true

# Polling interval in minutes (0 = disabled, use /gantt command only)
# Set to e.g. 30 to auto-refresh chart every 30 minutes
POLL_INTERVAL_MINUTES=0

